<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight=".2"
        android:id="@+id/img_icon_near"
        android:src="@drawable/community_icon"
        android:gravity="center_vertical"
        android:background="@color/soup"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/category"
        android:textStyle="bold"
        android:id="@+id/txt_cat_near"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:background="@color/soup"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"

        android:text="MMMMMMMMMMMMMMMMMMMMMM"
        android:id="@+id/txt_name_near"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:paddingLeft="25dp"
        android:background="@color/soup"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7"
            android:id="@+id/img_dir_near"
            android:src="@drawable/compass_north"
            android:gravity="center_horizontal"
            android:background="@color/soup"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
           android:layout_weight="0.8"
            android:text="@string/dist"
            android:id="@+id/txt_dist_near"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:background="@color/soup"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:id="@+id/txt_unit_near"
                android:text="m"
                android:textSize="18sp"
                android:gravity="center"
                android:background="@color/soup"
                android:paddingRight="5dp"
                android:textStyle="bold"
                />



    </LinearLayout>

    </LinearLayout>
</LinearLayout>